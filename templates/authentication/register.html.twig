{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src={{ asset("assets/js/register.js") }}></script>
{% endblock %}

{% block title %}
    Register page
{% endblock %}

{% block body %}
    <div class="form-container container d-flex justify-content-center align-items-center">
        <form action="/register" class="register-form d-flex flex-column justify-content-between align-items-center">
            <p class="error text-danger" id="response-msg"></p>
            <div class="form-row">
                <label for="fullName">Full Name</label>
                <input type="text" required name="fullName">
            </div>
            <p class="error text-danger" id="error-fullName"></p>
            <div class="form-row">
                <label for="email">email addresss</label>
                <input type="email" required name="email">
            </div>
            <p class="error text-danger" id="error-email"></p>
            <div class="form-row">
                <label for="password">password</label>
                <input type="password" required name="password">
            </div>
            <p class="error text-danger" id="error-pasword"></p>
            <div class="form-row">
                <label for="confPassword">confirm password</label>
                <input type="password" required name="confPassword">
            </div>
            <p class="error text-danger" id="error-confPassword"></p>
            <button type="submit" id="register-btn" class="btn btn-outline-primary">submit</button>
        </form>
    </div>
{% endblock %}